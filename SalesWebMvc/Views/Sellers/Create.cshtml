@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";

}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action = "Create">
            
            <div class="form-group">
                <label asp-for="Seller.name" class="control-label">Name</label>
                <input asp-for="Seller.name" class="form-control" />
                <span asp-validation-for="Seller.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.email" class="control-label">E-mail</label>
                <input asp-for="Seller.email" class="form-control" />
                <span asp-validation-for="Seller.email" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Seller.bitrhDate" class="control-label">Birth Date</label>
                <input asp-for="Seller.bitrhDate" class="form-control" />
                <span asp-validation-for="Seller.bitrhDate" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Seller.baseSalary" class="control-label">Base Salary</label>
                <input asp-for="Seller.baseSalary" class="form-control" />
                <span asp-validation-for="Seller.baseSalary" class="text-danger"></span>
            </div>
            <div class="from-group">
                <label asp-for="Seller.DepartmentID" class="control-label"></label>
                <select asp-for="Seller.DepartmentID" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-control"></select>
            </div>
        <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}